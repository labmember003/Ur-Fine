<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="40dp"
    android:orientation="vertical"
    tools:context=".FirstFragment">

    <ImageView
        android:id="@+id/year1"
        android:layout_width="130dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fitness" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Workout"
        app:layout_constraintStart_toStartOf="@id/year1"
        app:layout_constraintEnd_toEndOf="@id/year1"
        app:layout_constraintTop_toBottomOf="@id/year1" />

    <ImageView
        android:id="@+id/year2"
        android:layout_width="130dp"
        android:layout_height="180dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/diet" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Nutrition"
        app:layout_constraintStart_toStartOf="@id/year2"
        app:layout_constraintEnd_toEndOf="@id/year2"
        app:layout_constraintTop_toBottomOf="@id/year2" />

    <ImageView
        android:id="@+id/year3"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/mentalhealth"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mental Health"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/year3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/year3"
        app:layout_constraintStart_toStartOf="@id/year3" />

    <ImageView
        android:id="@+id/year4"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/sanitary"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Hygiene"
        app:layout_constraintTop_toBottomOf="@id/year4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/year4"
        app:layout_constraintStart_toStartOf="@id/year4" />

    <ImageView
        android:id="@+id/year5"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/heartproblem"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Chronic disease management"
        app:layout_constraintTop_toBottomOf="@id/year5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/year5"
        app:layout_constraintStart_toStartOf="@id/year5" />

    <ImageView
        android:id="@+id/year6"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/pregnant"
        tools:src="@tools:sample/avatars" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Pregnant Women"
        app:layout_constraintTop_toBottomOf="@id/year6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/year6"
        app:layout_constraintStart_toStartOf="@id/year6" />


</androidx.constraintlayout.widget.ConstraintLayout>